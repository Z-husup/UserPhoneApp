@model UserPhoneApp.Models.Phone
@{
    ViewData["Title"] = "Delete Phone";
}

<h2>Delete Phone</h2>

<h4>Are you sure you want to delete this?</h4>

<div>
    <p><strong>Phone:</strong> @Model.PhoneNumber</p>
</div>

<form asp-action="Delete">
    @Html.AntiForgeryToken()

    <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />
    <input type="hidden" asp-for="Id"/>
    <button type="submit" class="btn btn-danger">Delete</button>
    
    @if (!string.IsNullOrEmpty(ViewBag.ReturnUrl as string))
    {
        <a href="@ViewBag.ReturnUrl" class="btn btn-secondary">Back</a>
    }
    else
    {
        <a asp-action="Index" class="btn btn-secondary">Back</a>
    }
</form>