@model UserPhoneApp.Models.Phone
@{
    ViewData["Title"] = "Edit Phone";
}

<h2>Edit Phone</h2>

<form asp-action="Edit">
    @Html.AntiForgeryToken()

    <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />
    <input type="hidden" asp-for="Id"/>

    <div class="mb-3">
        <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
        <input asp-for="PhoneNumber" class="form-control"/>
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="UserId" class="form-label">Set Ownership</label>
        <select asp-for="UserId"
                asp-items="ViewBag.Users"
                class="form-select">
        </select>
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    
    @if (!string.IsNullOrEmpty(ViewBag.ReturnUrl as string))
    {
        <a href="@ViewBag.ReturnUrl" class="btn btn-secondary">Back</a>
    }
    else
    {
        <a asp-action="Index" class="btn btn-secondary">Back</a>
    }
</form>